<h1>Galleries</h1>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th colspan="3"> Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @galleries.each do |gallery| %>
      <tr>
        <td><%= gallery.name %></td>
        <td><%= gallery.city %></td>
        <td><%= link_to 'Show', gallery, class: 'btn btn-warning btn-sm'%>
        <%= link_to 'Edit', edit_gallery_path(gallery), class: 'btn btn-primary btn-sm' %>
    <%= link_to 'Destroy', gallery, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-danger btn-sm'%> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


